
<table class="table table-hover" style="margin-left: 35px; width: 95%;">
    <caption>
        <br>
        <ol id="articleTab" class="breadcrumb">
            <li>文章列表</li>
            <li><a href="/article/list/1">已提交</a></li>
            <li><a href="/article/list/2">编辑中</a></li>
        </ol>

    </caption>
    <thead>
    <tr>
        <th>ID</th>
        <th>标题</th>
        <th>作者</th>
        <th>提交时间</th>
        <th>更新时间</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
        #foreach($article in $!articles.list)
        <tr>
            <td class="col-xs-1">$!article.id</td>
            <td class="col-xs-3">

                <a href="/article/view/$!article.id" title="$!article.title">
                    #set($str=$!{article.title})
                    #if($str.length()>15)
                        #set($str=$str.substring(0,15))
                        $str ...
                    #else
                        $!{article.title}
                    #end
                </a>
            </td>
            <td class="col-xs-1">$!article.author</td>
            <td class="col-xs-2">$!date.format($!article.submitTime)</td>
            <td class="col-xs-2">$!date.format($!article.updateTime)</td>
            <td class="col-xs-1">
                <div class="btn-group">
                    <button type="button" class="btn btn-xs btn-padding btn-link" onclick="location='/article/edit/$!article.id'">编辑
                    </button>
                    <button class="btn btn-xs btn-link dropdown-toggle" type="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/article/delete/$!article.id" data-content="确定删除此文章?">删除</a></li>
                        <li><a href="/question/toAddOrEdit?articleId=$!article.id">添加题目</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        #end
    </tbody>
</table>

<nav>
    <div class="col-xs-4 col-xs-offset-4">
    ## 使用分页宏
        #pagination($articles)
    </div>
</nav>

<script>
    var selectedTab = $('#articleTab a[href="$link.requestPath"]');
    selectedTab.parent().html(selectedTab.html());

</script>