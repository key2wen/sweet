
<table class="table table-hover" style="margin-left: 35px; width: 95%;">
    <caption>
        <br>
        <ol id="wordTab" class="breadcrumb">
            <li>单词列表</li>
        </ol>

    </caption>
    <thead>
    <tr>
        <th>ID</th>
        <th>单词</th>
        <th>类型</th>
        <th>英式发音音标</th>
        <th>美式发音音标</th>
        <th>英式音频</th>
        <th>美式音频</th>

        <th>描述</th>
        <th>例子</th>

        <th>创建时间</th>
        <th>更新时间</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
        #foreach($word in $!words.list)
        <tr>
            <td class="col-xs-1">$!word.id</td>
            <td class="col-xs-3">

                <a href="/word/view/$!word.id" title="$!word.word">
                        $!{word.word}
                </a>
            </td>
            <td class="col-xs-1">$!word.type</td>
            <td class="col-xs-1">$!word.ukSymbol</td>
            <td class="col-xs-1">$!word.usSymbol</td>
            <td class="col-xs-1">$!word.ukVoicePath</td>
            <td class="col-xs-1">$!word.usVoicePath</td>

            <td class="col-xs-1">$!word.desc</td>
            <td class="col-xs-1">$!word.example</td>


            <td class="col-xs-2">$!date.format($!word.createTime)</td>
            <td class="col-xs-2">$!date.format($!word.updateTime)</td>
            <td class="col-xs-1">
                <div class="btn-group">
                    <button type="button" class="btn btn-xs btn-padding btn-link" onclick="location='/word/edit/$!word.id'">编辑
                    </button>
                    <button class="btn btn-xs btn-link dropdown-toggle" type="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/word/delete/$!word.id" data-content="确定删除此文章?">删除</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        #end
    </tbody>
</table>

<nav>
    <div class="col-xs-4 col-xs-offset-4">
    ## 使用分页宏
        #pagination($words)
    </div>
</nav>

<script>
    var selectedTab = $('#wordTab a[href="$link.requestPath"]');
    selectedTab.parent().html(selectedTab.html());

</script>