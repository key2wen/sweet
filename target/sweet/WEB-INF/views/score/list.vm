<table class="table table-hover" style="margin-left: 35px; width: 95%;">

    <caption>
        <br>
        <ol class="breadcrumb">
            <li>成绩列表</li>
        </ol>
    </caption>

    <thead>
    <tr>
        <th>用户名</th>
        <th>姓名</th>
        <th>考试</th>
        <th>学时</th>
        <th>成绩</th>
        <th>状态</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
        #foreach($score in $!pagedResult.list)
        <tr>
            <td class="col-xs-1">$!userInfoMap.get($score.userId).username</td>
            <td class="col-xs-1">$!userInfoMap.get($score.userId).name</td>
            <td class="col-xs-3">$!examinationMap.get($score.examinationId).name</td>
            <td class="col-xs-1">$!examinationMap.get($score.examinationId).period</td>
            <td class="col-xs-1">$!score.score  #if($!score.isPaSS==1)(及格)#else(不及格)#end</td>
            <td class="col-xs-1">#if($!score.status == 2)审核通过#else未审核#end</td>
            <td class="col-sm-1" style="min-width: 100px;">
                <div class="btn-group">
                    <button type="button" class="btn btn-xs btn-padding btn-link" onclick="location='/score/answerInfo?id=$score.id'">查看试卷</button>
                    <button class="btn btn-xs btn-link dropdown-toggle" type="button" id="action$score.id"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>

                    <ul class="dropdown-menu">
                        #if($!score.status == 1)
                            <li><a href="/score/checkPass?id=$score.id">审核通过</a></li>
                        #end
                        <li><a href="/score/delete?id=$score.id">删除</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        #end
    </tbody>
</table>

<nav>
    <div class="col-xs-4 col-xs-offset-4">
    ## 使用分页宏
        #pagination($pagedResult)
    </div>
</nav>

