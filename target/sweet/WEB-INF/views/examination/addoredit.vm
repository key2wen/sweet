<form id="examinationForm" class="form-horizontal" action="/examination/addOrEdit#if($examination)?id=$examination.id#end" method="post">

    <caption>
        <br>
        <ol class="breadcrumb">
            <li>#if($examination)编辑考试信息#else新增考试信息#end</li>
        </ol>
    </caption>

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">考试名称: </label>

        <div class="col-sm-4">
            <input id="name" name="name" class="form-control" placeholder="必填，最长30个字符" maxLength="30" value="$!examination.name" required/>
        </div>
    </div>

