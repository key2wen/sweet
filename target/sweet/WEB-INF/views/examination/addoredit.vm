            #else
                <input id="phone" type="text" class="form-control" id="subject" name="subject" value="天天微信课" maxLength="20"/>
            #end
        </div>
    </div>

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">课时: </label>

        <div class="col-sm-4">
            <input id="phone" type="number" class="form-control" id="period" name="period" value="$!examination.period" min=“5” max=“100" required/>
        </div>
    </div>
    -->

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">题目个数: </label>

        <div class="col-sm-4">
            <input #if($examination) disabled="disabled" #end id="questionCount" type="number" class="form-control" id="questionCount" name="questionCount" value="$!examination.questionCount" min="5" max="100" required placeholder="新建后不可修改"/>
        </div>
    </div>

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">考试通过: </label>

        <div class="col-sm-4">
            <input  #if($examination) disabled="disabled" #end id="phone" type="number" class="form-control" id="passCount" name="passCount" value="$!examination.passCount" min="5" max="100" required placeholder="考试通过需回答正确的个数,不可修改"/>
        </div>
    </div>

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">需读文章: </label>

        <div class="col-sm-4">
            <input  #if($examination) disabled="disabled" #end id="readLeastCount" type="number" class="form-control" name="readLeastCount" value="$!examination.readLeastCount" min="20" max="100" placeholder="参加考试至少已读文章个数,不可修改" required/>
        </div>
    </div>

    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">全部学分需读: </label>

        <div class="col-sm-4">
            <input  #if($examination) disabled="disabled" #end id="readAllCount" type="number" class="form-control" name="readAllCount" value="$!examination.readAllCount" min="40" max="200" placeholder="获取全部学分需读文章个数,不可修改" required/>
        </div>
    </div>

